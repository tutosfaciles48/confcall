	<script src="{{ asset('assets/js/create.js') }}"></script>
	<script src="{{ asset('assets/js/date-input-polyfill.dist.js') }}"></script>
	<script src="{{ asset('assets/js/dashboard.js') }}"></script>
{% endblock %}
